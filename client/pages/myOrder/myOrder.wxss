/* pages/myOrder/myOrder.wxss */

.order {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  margin-top: 50rpx;
}

.orderDetail {
  display: flex;
  flex-direction: column;
  width: 95%;
  box-sizing: border-box;
  border-bottom: solid 5rpx #ebebeb;
  border-left: solid 2rpx #ebebeb;
  border-right: solid 5rpx #ebebeb;
  border-top: solid 2rpx #ebebeb;
  font-size: 30rpx;
  align-items: center;
  background-color: #fff;
}

.detail {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 90%;
  margin-top: 5rpx;
  border-bottom: solid 2rpx #ebebeb;
}

.property {
  color: #888;
}

.context {
  width: 40%;
}

.food {
  display: flex;
  padding-left: 30rpx;
}

.food0 {
  display: flex;
  flex-direction: column;
}

.foodProperty {
  display: flex;
  padding-left: 60rpx;
  color: #888;
}

.price {
  display: flex;
  flex-direction: row;
}

.symbol {
  color: red;
}

.add {
  background: #f6f6f6;
  height: 11%;
  width: 100%;
  border-top: solid 1rpx #e6e6e6;
  display: flex;
  z-index: 1001;
  justify-content: center;
  position: fixed;
  bottom: 0;
}

.button {
  font-size: 30rpx;
  background-color: #38bb85;
  color: white;
  margin: 30rpx;
}
